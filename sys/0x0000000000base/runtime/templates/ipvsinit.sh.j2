#!/bin/bash


# Create dummy network
ip link add dev kube-ipvs0 type dummy 
ip addr add 10.254.0.3/32 dev kube-ipvs0
ip addr add 10.254.0.1/32 dev kube-ipvs0


# Set ipvsadm rule
{{ipvsinit_shell}}


# Set user environment variables.
echo "alias docker='/usr/local/bin/nerdctl --namespace k8s.io'" >> /etc/profile

echo "alias docker='/usr/local/bin/nerdctl --namespace k8s.io'" >> ~/.bashrc


exit 0


